@model WeAreFootball.Web.ViewModels.Events.CreateEventViewModel

@{
    var leaguesItems = this.Model.LeagueItems.Select(x => new SelectListItem(x.Value, x.Key));
    var teamsItems = this.Model.TeamsItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<form method="post" class="col-md-6 offset-md-3 center"
      enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-12 mt-5">
        <h3>Create derby</h3>
        <br />
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="LeagueId"></label>
                    <select asp-for="LeagueId" class="form-control" asp-items="leaguesItems"></select>
                    <span asp-validation-for="LeagueId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HomeTeamId"></label>
                    <select asp-for="HomeTeamId" class="form-control" asp-items="teamsItems"></select>
                    <span asp-validation-for="HomeTeamId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AwayTeamId"></label>
                    <select asp-for="AwayTeamId" class="form-control" asp-items="teamsItems"></select>
                    <span asp-validation-for="AwayTeamId" class="text-danger"></span>
                </div>
                <b class="text-muted mb-3 d-block">Derby of the week ?</b>
                <div class="custom-control custom-checkbox">
                    <input asp-for="IsDerbyOfTheWeek" />
                    <label asp-for="IsDerbyOfTheWeek">Yes</label>
                    <span asp-validation-for="IsDerbyOfTheWeek" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sign"></label>
                    <input asp-for="Sign" class="form-control" />
                    <span asp-validation-for="Sign" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
