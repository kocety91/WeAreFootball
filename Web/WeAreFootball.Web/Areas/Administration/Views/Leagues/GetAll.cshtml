@model WeAreFootball.Web.ViewModels.Leagues.AllLeaguesInTableViewModel

<div class="col-12 mt-5">
    <div class="card spur-card">
        <div class="card-header">
            <div class="spur-card-icon">
            </div>
            <div class="spur-card-title"><h3>All leagues</h3></div>
        </div>
        <div class="card-body ">
            <table class="table table-striped table-in-card">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Country</th>
                        <th>Image</th>
                        <th>Teams</th>
                        <th>Delete</th>
                        <th>Go to</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var currentLeague in Model.Leagues)
                    {
                        <tr>
                            <td>@currentLeague.Name</td>
                            <td>@currentLeague.Country</td>
                            <td><img class="img-responsive" src=@currentLeague.ImgUrl width="100" height="100"></td>
                            <td>@currentLeague.TeamsCount</td>
                            <td>
                                <form method="post" asp-area="Administration" asp-controller="Leagues" asp-action="Delete" asp-route-id="@currentLeague.Id">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                            <td><a type="button" class="btn btn-primary" asp-area="" asp-controller="Leagues" asp-action="ById" asp-route-id="@currentLeague.Id">Go to</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <partial name="_DashboardPagingPartial" model="@Model" />
        </div>
    </div>
</div>