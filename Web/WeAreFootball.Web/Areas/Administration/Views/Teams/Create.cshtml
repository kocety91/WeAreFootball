@model WeAreFootball.Web.ViewModels.Teams.CreateTeamViewModel

@{
    var leaguesItems = this.Model.LeagueItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<form method="post" class="col-md-6 offset-md-3 center"
      enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="col-12 mt-5">
        <h3>Create new team</h3>
        <br />
        <div class="card">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StadiumName"></label>
                    <input asp-for="StadiumName" class="form-control" />
                    <span asp-validation-for="StadiumName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LeagueId"></label>
                    <select asp-for="LeagueId" class="form-control" asp-items="leaguesItems"></select>
                    <span asp-validation-for="LeagueId" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <label asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Logo"></label>
                    <input asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <input type="submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
