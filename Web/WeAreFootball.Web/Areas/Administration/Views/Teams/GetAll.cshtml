@model WeAreFootball.Web.ViewModels.Teams.AllTeamsInTableViewModel

<div class="col-12 mt-5">
    <div class="card spur-card">
        <div class="card-header">
            <div class="spur-card-icon">
            </div>
            <div class="spur-card-title"><h3>All teams</h3></div>
        </div>
        <div class="card-body ">
            <table class="table table-striped table-in-card">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Image</th>
                        <th>LeagueName</th>
                        <th>City</th>
                        <th>StadiumName</th>
                        <th>Delete</th>
                        <th>Go to</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var currentTeam in Model.Teams)
                    {
                        <tr>
                            <td>@currentTeam.Name</td>
                            <td><img class="img-responsive" src=@currentTeam.ImgUrl width="100" height="100"></td>
                            <td>@currentTeam.LeagueName</td>
                            <td>@currentTeam.City</td>
                            <td>@currentTeam.StadiumName</td>
                            <td>
                                <form method="post" asp-area="Administration" asp-controller="Teams" asp-action="Delete" asp-route-id="@currentTeam.Id">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                            <td><a type="button" class="btn btn-primary" asp-area="" asp-controller="Teams" asp-action="ById" asp-route-id="@currentTeam.Id">Go to</a></td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <partial name="_DashboardPagingPartial" model="@Model" />
        </div>
    </div>
</div>